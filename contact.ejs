<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="../css/style.css">

  <title>Contact</title>
</head>

<body>
  <% data=details %>
    <%- include ("../views/partials/navbar.ejs"), data  %>

      <!-- contact us sections -->
      <section id="contact-us " class="py-2" style="margin: 10% !important; font-weight: bolder;">
        <div class="container">
          <h2 class="text-center text-dark">Contact Me</h2>
          <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-8">

              <form action="/process_contact" method="post">

                <div class="mb-3 text-dark">
                  <label for="emailinfo" class="form-label"> Email address</label>
                  <input name="email" type="email" class="form-control" id="emailinfo" placeholder="Please Enter your email">
                </div>

                <div class="mb-3 text-dark">
                  <label for="companyDetail" class="form-label">Company</label>
                  <input name="company" type="text" class="form-control" id="companyDetail"
                    placeholder="Please Enter the name of your company">
                </div>

                <div class="mb-3 text-dark">
                  <label for="contactNumber" class="form-label">Contact Number</label>
                  <input name="phone" type="number" class="form-control" id="contactNumber" placeholder="Please the contact Number">
                </div>

                <div class="mb-3">
                  <label for="descriptionSection" class="form-label text-dark">Description</label>
                  <textarea name="query" class="form-control" id="descriptionSection" rows="6"
                    placeholder="Please Enter the job Description"></textarea>></textarea>
                </div>
                <div class=" container text-center">
                  <button type="submit" class="btn btn-success">Submit</button>
              </form>
            </div>
          </div>
        </div>
        </div>

      </section>

      <%- include("../views/partials/footer.ejs") %>



      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

</body>

</html>